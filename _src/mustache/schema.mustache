<!DOCTYPE html>

<title>{{ name }}</title>

<meta name="description" content="{{ description }}">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta charset="utf-8">

<link rel="stylesheet" type="text/css" href="/css/style.css">

{{> nav }}

<header class="ui-container">
    <h1>{{ name }}</h1>
    <p>{{ description }}</p>
</header>
    
<main class="ui-container">
    {{# schema.@parent }}
        <h2>Parent</h2>
        <a href="/{{ . }}">{{ . }}</a>
    {{/ schema.@parent }}

    {{# hasProperties }}
        <h2>Properties</h2>
        <table>
            {{# properties }}
                <tr>
                    <td>{{ @name }}</td>
                    <td>{{ @description }}</td>
                </tr>
            {{/ properties }}
        </table>
    {{/ hasProperties }}
   
    {{# hasOptions }}
        <h3>Options</h3>
        <table>
            {{# options }}
                <tr>
                    <td>{{ @name }}</td>
                    <td>{{ @description }}</td>
                </tr>
            {{/ options }}
        </table>
    {{/ hasOptions }}
   
    {{# hasExample }}
        <h2>Example</h2>
    
        {{# exampleIframe }}
            <details>
                <summary>Visual</summary>
                <iframe srcdoc="{{ . }}"></iframe>
            </details>
        {{/ exampleIframe }}
            
        {{# exampleHTML }}
            <details>
                <summary>HTML</summary>
                <pre>{{ . }}</pre>
            </details>
        {{/ exampleHTML }}
        
        {{# exampleJSON }}
            <details>
                <summary>JSON</summary>
                <pre>{{ . }}"</pre>
            </details>
        {{/ exampleJSON }}
    {{/ hasExample }}
   
    <h2>Definition</h2>

    {{# json }}
        <details>
            <summary>JSON</summary>
            <pre>{{{ . }}}</pre>
        </details>
    {{/ json }}

    {{# template }}
        <details>
            <summary>Template</summary>
            <pre>{{ . }}</pre>
        </details>
    {{/ template }}

</main>
